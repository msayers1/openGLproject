#---------------------------------------------------------
#  Taken from URI CSC 406 basic program. 	Javier's_Makefiles_for_Linux.zip
#---------------------------------------------------------
# macros
RM = /bin/rm -f  # for removing
CC = gcc         # compiler
#---------------------------------------------------------

#---------------------------------------------------------
# vars
EXEC=main
CLASS=Ellipse
#---------------------------------------------------------

#---------------------------------------------------------
CPPFLAGS=-I. -lglut -lGLU -lGL -lstdc++ -lm
#-std=c++11 -fmax-errors=1 -Wall -O3
#---------------------------------------------------------

#---------------------------------------------------------
all: ${EXEC} # execute "make"
#---------------------------------------------------------
${EXEC}: ${EXEC}.o ${CLASS}.o
	${CC} ${EXEC}.o ${CLASS}.o -o ${EXEC} ${CPPFLAGS}
#---------------------------------------------------------
${EXEC}.o: ${EXEC}.cpp ${CLASS}.o
	${CC} -g -c ${EXEC}.cpp -o ${EXEC}.o ${CPPFLAGS}
#---------------------------------------------------------

#---------------------------------------------------------
${CLASS}.o: ${CLASS}.cpp 
	${CC} -g -c ${CLASS}.cpp -o ${CLASS}.o ${CPPFLAGS}
#---------------------------------------------------------


#---------------------------------------------------------
clean: # delete object files and executables
	$(RM) ${EXEC}.o ${EXEC}
	$(RM) ${CLASS}.o ${CLASS}
#---------------------------------------------------------
